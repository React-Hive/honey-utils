{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "jest"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
